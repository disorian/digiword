@model DigiWord.UI.Process.ViewModels.NumberDetailViewModel

@{
                /**/

                ViewBag.Title = "Digi Word number to text converter";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Digi Word Conveter</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please enter the follwoing detail</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
